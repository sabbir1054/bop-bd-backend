<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
 
</head>
<body class="bg-gray-100 p-10">
  <div class="max-w-4xl mx-auto bg-white p-8 shadow-md rounded-lg">
    <div class="flex justify-between items-center mb-10">
      <div>
        <h1 class="text-4xl font-bold">Order #<%= invoiceNumber %></h1>
        <p class="text-gray-600 mt-2"><%= invoiceDate %></p>
      </div>
      <div class="text-right">
        <img src="https://i.ibb.co.com/FB1KYsQ/HADI-TEX-CAM-01940199633.png" alt="" srcset="">
        <p>Your Trusted B2B Platform</p>
      </div>
    </div>

    <!-- Organization Info in Same Row -->
    <div class="grid grid-cols-2 gap-8 mb-6">
      <div>
        <h3 class="text-xl font-semibold">BILL TO (Buyer)</h3>
        <p><%= buyer.name %></p>
        <p><%= buyer.address %>, <%= buyer.country %></p>
        <p>VAT Code: <%= buyer.vatCode %></p>
      </div>
      <div class="text-right">
        <h3 class="text-xl font-semibold">SOLD BY (Seller)</h3>
        <p><%= seller.name %></p>
        <p><%= seller.address %>, <%= seller.country %></p>
      </div>
    </div>

    <table class="w-full text-left table-auto mb-6">
      <thead>
        <tr class="bg-gray-200">
          <th class="px-4 py-2">Item</th>
          <th class="px-4 py-2">Price</th>
          <th class="px-4 py-2">Qty</th>
          <th class="px-4 py-2">Total</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
        <tr>
          <td class="border px-4 py-2">
            <h4 class="font-semibold"><%= item.name %></h4>
            <p class="text-gray-600 text-sm"><%= item.description %></p>
          </td>
          <td class="border px-4 py-2">$<%= item.price %></td>
          <td class="border px-4 py-2"><%= item.quantity %></td>
          <td class="border px-4 py-2">$<%= item.total %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="flex justify-end mb-6">
      <table class="w-full max-w-xs text-left table-auto">
        <tr>
          <th class="px-4 py-2">Subtotal</th>
          <td class="px-4 py-2"><%= subtotal %></td>
        </tr>
        <tr>
          <th class="px-4 py-2">Delivery Fee</th>
          <td class="px-4 py-2"><%= deliveryFee %></td>
        </tr>
        <tr>
          <th class="px-4 py-2">Total</th>
          <td class="px-4 py-2 font-bold"><%= total %></td>
        </tr>
      </table>
    </div>
  </div>
</body>
</html>
